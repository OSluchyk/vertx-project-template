<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>

    <RandomAccessFile name="RandomAccessFile" fileName="web-app.log" immediateFlush="false" append="false">
      <PatternLayout>
        <Pattern>%d %p %class{1.} [%t] %m %ex%n</Pattern>
      </PatternLayout>
    </RandomAccessFile>

  </Appenders>

  <Loggers>
    <Root level="info">
      <AppenderRef ref="RandomAccessFile"/>
    </Root>
  </Loggers>

</Configuration>
